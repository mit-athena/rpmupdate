# $Id: Makefile.in,v 1.12 2003-05-13 22:33:42 ghudson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
sbindir=@sbindir@
mandir=@mandir@
lsbindir=@lsbindir@
sysconfdir=@sysconfdir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@ ${WARN_CFLAGS} ${ERROR_CFLAGS}
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=-I/usr/include/rpm -DSYSCONFDIR=\"${sysconfdir}\" ${CPPFLAGS} \
	   ${CFLAGS} ${DEFS}

all: rpmupdate

rpmupdate: rpmupdate.o
	${CC} ${LDFLAGS} -o rpmupdate rpmupdate.o ${LIBS} -lrpm -lrpmio \
	  -lrpmdb -lpopt -lz -lbz2 -lpthread -lelf

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${lsbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man8
	${INSTALL_PROGRAM} rpmupdate ${DESTDIR}${lsbindir}
	${INSTALL} -m 444 ${srcdir}/rpmupdate.8 ${DESTDIR}${mandir}/man8

clean:
	rm -f rpmupdate.o rpmupdate

distclean: clean
	rm -f config.cache config.log config.status Makefile
